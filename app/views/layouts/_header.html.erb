  <div class="container">
    <div class="d-flex justify-content-between align-items-center border">
      <%= link_to "Sports Hub", root_path, class: 'd-block m-0 col-3 text-bg-danger py-3 px-5 h2 text-uppercase text-decoration-none' %>
      <div class="form">
        <div class="fa fa-search"></div>
        <input type="search" id="form1" placeholder="&#x1F50D; Search by" class="d-block form-control" />
      </div>
      <div class="d-flex justify-content-between align-items-center text-secondary">
        <div class="px-1">Share</div>
        <a href="#" class="text-reset px-1 bi bi-facebook"></a>
        <a href="#" class="text-reset px-1 bi bi-twitter"></a>
        <a href="#" class="text-reset px-1 bi bi-google"></a>
      </div>
      <div  class="d-flex align-items-center">
      <% if user_signed_in? %>
        <div class="text-decoration-none d-block  font-weight-bold link-danger py-3 px-5 m-0 ">
          <%= link_to current_user.full_name, user_path(current_user.id), class: "text-secondary" %>
          <% if current_user.admin? %>
            <%= link_to 'admin panel', admin_users_path, class: "d-block text-danger" %>
          <% end %>
        </div>
        <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'link-danger py-3 px-5 m-0 border border-danger text-decoration-none' %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: 'text-decoration-none d-block  font-weight-bold link-danger py-3 px-5 m-0 ' %>
        <%= link_to "Log in", new_user_registration_path, class: 'link-danger py-3 px-5 m-0 border border-danger text-decoration-none' %>
      <% end %>
      <span>EN&#x25BC;</span>
      </div>
    </div>
  </div>
